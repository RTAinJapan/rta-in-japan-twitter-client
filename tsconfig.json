{
  "compilerOptions": {
    "module": "commonjs",
    "types": [
      "node"
    ],
    "target": "es2016",
    "allowJs": true,
    "jsx": "react",
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": false,
    "importHelpers": true,
    "strictNullChecks": true,
    "noUnusedLocals": false,
  },
  "include": [
    "js/**/*",
    "webpack.config.ts"
  ],
  "exclude": [
    "node_modules",
    "build",
    "acceptance-tests",
    "webpack",
    "jest"
  ]
}